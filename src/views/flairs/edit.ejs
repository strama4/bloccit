<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        
        <main class="container">
            <h1>Edit Flair</h1>

            <form action="/topics/<%= flair.topicId %>/flairs/<%= flair.id %>/update" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" aria-describedby="name-help" value="<%= flair.name %>"> 
                </div>
                <div class="form-group">
                    <label for="color">Color</label>
                    <input type="text" class="form-control" name="color" value="<%= flair.color %>">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </main>
        
        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>